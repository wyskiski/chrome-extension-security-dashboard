{
  "name": "Chrome Extension Checker",
  "description": "Get a risk analysis of the extensions installed in your browser.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Chrome Extension Cgecker",
    "default_icon": "cat icon.png"
  },
  "permissions": ["cookies","tabs","activeTab",
  "scripting","downloads","contextMenus", "management"],
  "host_permissions": ["<all_urls>", 
  "*://clients2.google.com/service/update2/crx*",
  "*://clients2.googleusercontent.com/crx/download/*"]
}